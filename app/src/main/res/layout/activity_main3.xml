<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/txt3"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:fontFamily="serif"
        android:text="@string/BernieBalasuriya"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="217dp"
        android:layout_height="166dp"
        android:background="#F57C00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.289"
        app:srcCompat="@drawable/beautiful3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="289dp"
        android:layout_height="158dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="On completion of a Advanced Diploma Course in Hair Dressing and Beauty Culture at Technique International Bernie opened her own salon in 1994.

Bernie also followed courses of study at Toni and Guy Singapore Australian Academy of Hair Dressing and Cosmoprof Singapore.

In addition to the salon services and dressing of Brides,"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.775"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.781" />

    <Button
        android:id="@+id/next3"
        android:layout_width="67dp"
        android:layout_height="38dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/custom_rounded_corners"
        android:soundEffectsEnabled="true"
        android:text="@string/next3"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/app3"
        android:layout_width="212dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/custom_rounded_corners"
        android:soundEffectsEnabled="true"
        android:text="@string/app3"
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/next3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>